<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
  "
        >
    <id>distr</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/distr</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>S1-LICENSE.txt</include>
                <include>S1-NOTICE.txt</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/s1-distributed-test-node-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>s1-distributed-test-node.jar</destName>
        </file>
    </files>
    <!-- use this section if you want to package dependencies -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*:pom</exclude>
            </excludes>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>